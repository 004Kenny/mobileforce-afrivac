        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/country_describe"
            android:layout_toRightOf="@+id/cairo"
            android:orientation="horizontal">

            <ImageView
                android:id="star1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/country_describe"
                android:layout_toRightOf="@id/cairo"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="star2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/country_describe"
                android:layout_toRightOf="@id/star1"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="star3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/country_describe"
                android:layout_toRightOf="@id/cairo"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="star3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/country_describe"
                android:layout_toRightOf="@id/cairo"
                android:src="@drawable/StarBright">

            </ImageView>

            <ImageView
                android:id="star5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/country_describe"
                android:layout_toRightOf="@id/cairo"
                android:src="@drawable/Stardull">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="4.1"
                android:textColor="@color/black"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="(2,731)"
                android:textColor="@color/black">

            </TextView>


        </LinearLayout>


    </RelativeLayout>

    </androidx.cardview.widget.CardView>


