<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="fill_vertical"
	android:weightSum="1"
	android:background="@color/white"
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <RelativeLayout
		android:id="@+id/activity_popularHeader"
		android:layout_width="fill_parent"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_height="40dp">
		<ImageButton
			android:id="@+id/activity_popularMenuButton"
			android:src="@drawable/dash_menu"
			android:scaleType="fitCenter"
			android:background="@color/white"
			android:layout_width="40dp"
			android:layout_centerVertical="true"
			android:layout_height="40dp"/>
		
		<de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
			android:layout_centerVertical="true"
			android:layout_alignParentEnd="true"
            android:src="@drawable/profile_pic"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFF"/>
	</RelativeLayout>
	<TextView
		android:id="@+id/activity_popularHeaderText"
		android:layout_width="fill_parent"
		android:layout_height="80dp"
		android:text="Hi Adeleke,\nwhere would you like to visit?"
		android:textSize="18sp"
		style="@style/activity_popular_text"
		android:gravity="center_vertical"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"/>
	<androidx.appcompat.widget.SearchView
		android:layout_marginStart="16dp"
		android:layout_marginEnd="16dp"
		android:id="@+id/search_view"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:background="@drawable/bg_white_rounded"
		android:clickable="true"/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="fill"
		android:weightSum="1"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginTop="1dp">
		<TextView
			android:id="@+id/activity_popularDiscoverHeaderText"
			android:textColor="@color/black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			style="@style/activity_popular_text"
			android:text="Discover Africa"
		/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="5dp"
		android:gravity="right"
		android:orientation="horizontal"
		>
		<Button
			android:layout_marginStart="30dp"
			android:layout_gravity="right"
			android:layout_width="6dp"
			android:layout_height="6dp"
			android:background="@drawable/round_shape_btn2"/>
		<Button
			android:layout_marginStart="2dp"
			android:layout_gravity="right"
			android:layout_width="20dp"
			android:layout_height="6dp"
			android:background="@drawable/round_shape_btn"/>
		<Button
			android:layout_marginStart="2dp"
			android:layout_gravity="right"
			android:layout_width="6dp"
			android:layout_height="6dp"
			android:background="@drawable/round_shape_btn2"/>
		<Button
			android:layout_marginStart="2dp"
			android:layout_gravity="right"
			android:layout_width="6dp"
			android:layout_height="6dp"
			android:background="@drawable/round_shape_btn2"/>
		<Button
			android:layout_marginStart="2dp"
			android:layout_gravity="right"
			android:layout_width="6dp"
			android:layout_height="6dp"
			android:background="@drawable/round_shape_btn2"/>
	</LinearLayout>
	</LinearLayout>
	<androidx.appcompat.widget.RecyclerView
		android:id="@+id/activity_popular_discoverRecycleview"
		android:layout_width="match_parent"
		android:gravity="center_vertical"
		android:layout_marginBottom="10dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_height="140dp"/>
	<TextView
		android:id="@+id/activity_popularPopularHeaderText"
		android:textColor="@color/black"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="20sp"
		style="@style/activity_popular_text"
		android:text="Popular Places"
		android:layout_marginTop="10dp"
		android:layout_marginStart="16dp"/>
	<androidx.appcompat.widget.RecyclerView
		android:id="@+id/activity_popular_popular_RecycleView"
		android:layout_width="match_parent"
		android:layout_weight="1"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		android:layout_height="50dp"/>
	
</LinearLayout>