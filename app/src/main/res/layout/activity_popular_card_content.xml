<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
	android:layout_height="fill_parent"
	android:padding="5dp"
	android:layout_weight="1">
	<ImageView
		android:id="@+id/activity_popular_cardButtonLove"
		android:layout_alignParentRight="true"
		android:layout_width="30dp"
		android:layout_height="30dp"/>

	<TextView
		android:text="Title"
		android:gravity="center_vertical"
		style="@style/activity_popular_text"
		android:textSize="16sp"
		android:id="@+id/activity_popular_cardTitle"
		android:layout_width="wrap_content"
		android:layout_gravity="fill_horizontal"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/activity_popular_cardButtonLove"
		android:layout_height="25dp"/>
	<TextView
		android:text="Subtitle"
		android:gravity="center_vertical"
		android:textSize="14sp"
		style="@style/activity_popular_text"
		android:textColor="@color/roundBtn"
		android:id="@+id/activity_popular_cardSubtitle"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_gravity="fill_horizontal"
		android:layout_below="@id/activity_popular_cardTitle"
		android:layout_toLeftOf="@id/activity_popular_cardButtonLove"
		android:layout_height="20dp"/>
	<LinearLayout
		android:id="@+id/activity_popular_cardRatingBar"
		android:layout_width="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:gravity="center_vertical"
		android:weightSum="5"
		android:layout_height="15dp"
		android:layout_alignParentBottom="true"
	>
		<ImageView
			android:id="@+id/star1"
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:src="@drawable/ic_star_black_24dp"
			android:layout_marginRight="3dp"/>
		<ImageView
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:src="@drawable/ic_star_black_24dp"
			android:layout_marginRight="3dp"/>
		<ImageView
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:src="@drawable/ic_star_black_24dp"
			android:layout_marginRight="3dp"/>
		<ImageView
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:src="@drawable/ic_star_black_24dp"
			android:layout_marginRight="3dp"/>
		<ImageView
			android:layout_width="10dp"
			android:layout_height="10dp"
			android:src="@drawable/ic_star_border_black_24dp"
		/>
	</LinearLayout>
	<TextView
		android:id="@+id/activity_popular_cardRatingText"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		android:layout_width="wrap_content"
		android:textSize="14sp"
		android:layout_gravity="fill_horizontal"
		android:layout_height="20dp"
		android:layout_toRightOf="@id/activity_popular_cardRatingBar"
		android:layout_alignParentBottom="true"/>
	<TextView
		android:id="@+id/activity_popular_cardRatingCount"
		android:layout_width="wrap_content"
		android:layout_gravity="fill_horizontal"
		android:textSize="14sp"
		android:textColor="@color/stroke"
		android:layout_height="20dp"
		android:layout_toRightOf="@id/activity_popular_cardRatingText"
		android:layout_alignParentBottom="true"/>
	<TextView
		android:textSize="12sp"
		android:maxLines="3"
		android:text="InformationInformationInformationInformationInformationInformationInformationInformationInformation"
		android:id="@+id/activity_popular_cardInfo"
		android:layout_width="fill_parent"
		android:layout_gravity="fill_horizontal"
		android:layout_below="@id/activity_popular_cardSubtitle"
		android:layout_height="0dp"
		android:layout_above="@id/activity_popular_cardRatingBar"
	/>

</RelativeLayout>